@model BeanScene.Models.Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center text-danger mb-4">Delete Reservation</h2>

            <div class="alert alert-warning text-center">
                <h4>Are you sure you want to delete this reservation?</h4>
                <p>This action cannot be undone.</p>
            </div>

            <!-- Reservation Details -->
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5>Reservation Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Person Name</dt>
                        <dd class="col-sm-8">@Model.Person.Name</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Person.Email</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Person.Phone</dd>

                        <dt class="col-sm-4">Sitting</dt>
                        <dd class="col-sm-8">@Model.Sitting!.Name</dd>

                        <dt class="col-sm-4">Start</dt>
                        <dd class="col-sm-8">@Model.Start.ToString("f")</dd>

                        <dt class="col-sm-4">Duration</dt>
                        <dd class="col-sm-8">@Model.Duration</dd>

                        <dt class="col-sm-4">Number of Guests</dt>
                        <dd class="col-sm-8">@Model.Pax</dd>

                        <dt class="col-sm-4">Notes</dt>
                        <dd class="col-sm-8">@Model.Notes</dd>
                    </dl>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-center mt-4">
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg me-2">Delete</button>
                </form>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
            </div>
        </div>
    </div>
</div>

<!-- Additional Styling -->
<style>
    body {
        background-color: #f8f9fa;
    }

    h2 {
        font-size: 2rem;
        font-weight: bold;
    }

    .alert-warning {
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeeba;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        font-size: 1.25rem;
        font-weight: bold;
    }

    dl.row dt {
        font-weight: bold;
        color: #495057;
    }

    dl.row dd {
        color: #343a40;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        padding: 10px 20px;
        font-size: 1.2rem;
        transition: background-color 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-secondary {
        padding: 10px 20px;
        font-size: 1.2rem;
    }
</style>
